                    <td class="body-data"><%=blog.description%></td>
                    <td class="body-data"> &nbsp;&nbsp;&nbsp;<a href="/user/<%=blog.title%>/delete"><i class="fa-regular fa-trash-can"></i></a>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<a href="/user/<%=blog.title%>/edit"><i class="fa-regular fa-pen-to-square"></i></a></td>
