<!doctype html>
<html lang="en">
  <%- include("./partial/head.ejs")%>
  <body>
    <%- include("./partial/nav2.ejs")%>
   

        <%- include("./partial/leftmenu.ejs")%>
       
        <table id="blog-table" class="mx-auto">
            <thead>
                <tr id="blog-head-row">
                    <th class="head-data" >Name/Title</th>
