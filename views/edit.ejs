<!doctype html>
<html lang="en">
  <%- include("./partial/head.ejs")%>
  <body>
    <%- include("./partial/nav2.ejs")%>
   

        <!-- <%- include("./partial/leftmenu.ejs")%> -->
        <div class=" mt-5 mx-auto" style=" width: 40rem;">

            <form method="post" action="/user/<%=blog.title%>/edit?_method=PUT" enctype="multipart/form-data" class="mx-auto">
                <h1 class="mb-4" >Update</h1>
                <div class="mb-3">
                    <label for="title" class="form-label"><strong>Name/Title </strong></label>
                    <input type="text" value="<%=blog.title%>" name="title" style="border: 0.001rem solid rgb(113, 113, 113);" class=" form-control" id="title" >
                   
                  </div>
                <div class="mb-3">
                  <label for="category" class="form-label"><strong>Category</strong></label>
                  <input type="text" value="<%=blog.category%>" name="category" style="border: 0.001rem solid rgb(113, 113, 113);" class=" form-control" id="category" >
                 
                </div>
                <div class="mb-3">
                  <label for="description" class="form-label" >  <strong>Description</strong></label>
                  <textarea  name="description" style="border: 0.001rem solid rgb(113, 113, 113);"  class="form-control" id="description"><%=blog.description%></textarea>
      
                </div>
                <div class="mb-3">
                    <label for="Image" class="form-label" >  <strong>Image</strong></label>
                    
                    <input type="file" name="Image" />
        
                  </div>
                
                <button type="submit" style="width: 6rem;" class="btn btn-primary">Submit</button>
              </form>
              <br>
              <a href="/user/blogs"> <button  style="width: 6rem;" class="btn btn-primary">Cancel</button> </a>
    
    
        </div>
      
      
      
      
      
      
      
      
   
  
    <%- include("./partial/script.ejs")%>
   
  </body>
</html>